# AI Medical Assistant Environment Variables
# Copy this file to .env and update the values as needed

# Application Settings
DEBUG=False
API_HOST=localhost
API_PORT=8000

# Model Settings
MODEL_CACHE_DIR=./models
MAX_MODEL_SIZE_MB=1000

# Data Settings
DATA_DIR=./data
RAW_DATA_DIR=./data/raw
PROCESSED_DATA_DIR=./data/processed

# NLP Settings
NLP_MODEL_NAME=microsoft/BiomedNLP-PubMedBERT-base-uncased-abstract
MAX_TEXT_LENGTH=512

# Computer Vision Settings
CV_MODEL_NAME=microsoft/resnet-50
IMAGE_SIZE=224,224

# HuggingFace Settings
HF_TOKEN=your_huggingface_token_here
HF_CACHE_DIR=./.cache/huggingface

# Database Settings (optional)
# DATABASE_URL=sqlite:///./medical_assistant.db

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log
